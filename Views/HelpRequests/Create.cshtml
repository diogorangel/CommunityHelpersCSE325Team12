@model CommunityHelpers.Web.Models.HelpRequest

@{
    ViewData["Title"] = "Criar Pedido";
}

<div class="container border p-4 shadow-sm rounded bg-light" style="max-width: 600px;">
    <h2 class="text-center mb-4">What do you need?</h2>

    <form asp-action="Create">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Request Title</label>
            <input asp-for="Title" class="form-control" placeholder="E.g.: I need help with groceries" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category" class="form-label">Category</label>
            <select asp-for="Category" class="form-select">
                <option value="Groceries">Groceries</option>
                <option value="Yard Work">Yard Work</option>
                <option value="Tech Support">Tech Support</option>
                <option value="Moving">Moving/Furniture</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Detailed Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2">
            <button type="submit" class="btn btn-success">Publish Request</button>
            <a asp-action="Index" class="btn btn-link text-secondary">Back to list</a>
        </div>
    </form>
</div>